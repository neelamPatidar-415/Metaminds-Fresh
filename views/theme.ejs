<body class="bg-center bg-fixed min-h-screen bg-no-repeat bg-cover" style="background-image:url('/images/img copy theme 2.png') ;" style="image-rendering: crisp-edges;">


   <!-- //navbar -->
   <nav class="flex justify-between items-center p-4 text-white">
      <a href="/" class="bg-black text-white border-2 border-white font-normal px-4 py-2 rounded-md shadow">HOME</a>
      <!-- //logo -->
      <img class="h-[80px] w-[190px] mt-1 " src="/images/MetaMinds_ Logo white....png" alt="MetaMinds">
   </nav>

   <form action="/Session/study" method="POST" class="px-4 py-2">

      <h1 class="text-white font-medium text-3xl " >CHOOSE DURATION</h1>
      <ul class="bg-[#FFDE70] text-xl font-medium text-black list-none mt-4 px-5 py-5 divide-y divide-black md:w-[50%]">
         <li><input type="radio" name="duration" id="t1" value="30" class="hidden peer">
         <label for="t1" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">30 MINUTES</label>
         </li>
         <li><input type="radio" name="duration" id="t2" value="60" class="hidden peer">
         <label for="t2" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">1 HOUR</label>
         </li>
         <li><input type="radio" name="duration" id="t3" value="90" class="hidden peer">
         <label for="t3" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">1 HOUR 30 MINUTES</label>
         </li>
         <li><input type="radio" name="duration" id="t4" value="120" class="hidden peer">
         <label for="t4" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">2 HOURS</label>
         </li>
      </ul>

      <h1 class="text-white font-medium text-3xl mt-3" >CHOOSE THEME</h1>
      <ul class="bg-[#FFDE70] text-xl font-medium text-black list-none mt-4 px-5 py-5 divide-y divide-black md:w-[50%]">
         <li><input type="radio" name="theme" id="d2" value="handpan" class="hidden peer">
         <label for="d2" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">AURA TONES</label>
         </li>
         <li><input type="radio" name="theme" id="d3" value="lowIntensity" class="hidden peer">
         <label for="d3" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">CALM CURRENT</label>
         </li>
         <li><input type="radio" name="theme" id="d1" value="Rainfall" class="hidden peer">
         <label for="d1" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">RAINFALL</label>
         </li>
         <li><input type="radio" name="theme" id="d4" value="nightFocus" class="hidden peer">
         <label for="d4" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">MIDNIGHT MODE</label> 
         </li>
      </ul>

      <h1 class="text-white font-medium text-3xl mt-3" >CHOOSE BREAK-TYPE</h1>
      <ul class="bg-[#FFDE70] text-xl font-medium text-black list-none mt-4 px-5 py-5 divide-y divide-black md:w-[50%]">
         <li><input type="radio" name="breaktype" id="b1" value="walk" class="hidden peer">
         <label for="b1" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">WALKING</label>
         </li>
         <li><input type="radio" name="breaktype" id="b2" value="doodle" class="hidden peer">
         <label for="b2" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">DOODLING</label>
         </li>
         <li><input type="radio" name="breaktype" id="b3" value="breath" class="hidden peer">
         <label for="b3" class="peer-checked:bg-[#27272A] peer-checked:text-white px-3 py-2 cursor-pointer block">BOX-BREATHING</label>
         </li>
      </ul>

      <input class="px-2 py-2 bg-[#43AA8B] w-[150px] h-[50px] text-center text-2xl mt-5 block" type="submit" value="SUBMIT" />

   </form>



</body>
